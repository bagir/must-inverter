# UPS Monitoring System Configuration File
# Copy this file to config.yaml and customize as needed

# Serial port configuration
serial:
  port: /dev/ttyUSB0
  # Optional: baudrate (default: 9600)
  # baudrate: 9600

# Web server configuration
web:
  port: 8080
  # Host to bind to (default: 0.0.0.0)
  # host: 0.0.0.0

# Monitoring configuration
monitoring:
  # Polling interval in seconds (default: 30)
  interval: 30
  # Maximum connection errors before shutdown (default: 5)
  max_errors: 5
  # Use experimental Modbus parser (default: false)
  # use_modbus_parser: false

# Battery calculation configuration
battery:
  # Nominal battery capacity in Ah (default: 55.0)
  # Adjust this to match your UPS battery specifications
  capacity_ah: 55.0
  # Inverter efficiency (0.85-0.9, default: 0.88)
  # Typical values: 0.85-0.90 for PWM inverters
  inverter_efficiency: 0.88
  # Peukert coefficient for AGM batteries (1.1-1.25, default: 1.15)
  # Typical values: 1.15 for AGM, 1.25-1.3 for flooded lead-acid
  peukert_k: 1.15

# MQTT configuration (optional)
mqtt:
  # Set to true to enable MQTT
  enabled: false
  broker: localhost
  port: 1883
  topic: ups/telemetry
  # Optional: username and password for authentication
  # username: mqtt_user
  # password: mqtt_password
  # Optional: client ID (default: ups_monitor)
  # client_id: ups_monitor

# Logging configuration
logging:
  # Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
  level: INFO
  # Log file path (default: /tmp/ups_web_daemon.log)
  file: /tmp/ups_web_daemon.log
  # Enable console logging (default: true)
  console: true
